@page
@model Simple_Web_App.Pages.Games.IndexModel

@{
    ViewData["Title"] = "Library";
}

<h1>Library</h1>

<p>
    <a asp-page="Create" class="text-decoration-none">Create New +</a>
</p>
<table class="table" id="gameTable">
    <thead>
        <tr>
            <th>
                <a asp-page="Index" asp-route-sortOrder="@ViewBag.TitleSortParam">Title</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="@ViewBag.ReleaseDateSortParam">Release Date</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].Genre)
            </th>
            <th data-column="Platforms">
                @Html.DisplayNameFor(model => model.Game[0].Platforms)
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="@ViewBag.PriceSortParam">Price</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Game) {
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.RelaseDate)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Platforms)
            </td>
            <td class="align-middle">
                 @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-dark">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-dark">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
